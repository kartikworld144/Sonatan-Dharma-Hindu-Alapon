<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".BanglaCalender">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:background="@drawable/bg_custom"
        >



        <RelativeLayout
            android:id="@+id/id1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:background="@color/message"
            >


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/Sat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sunday"
                    android:textColor="@color/white"
                    android:padding="5dp"
                    android:textSize="25sp"
                    />

                <TextView
                    android:id="@+id/enDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 January, 2023"
                    android:textColor="@color/white"
                    android:padding="5dp"
                    android:textSize="18sp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentRight="true"
                >
                <TextView
                    android:id="@+id/শনি"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="সোমবার "
                    android:textColor="@color/white"
                    android:padding="5dp"
                    android:textSize="25sp"
                    />
                <TextView
                    android:id="@+id/bnDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="১৭ পৌষ , ১৪২৯"
                    android:textColor="@color/white"
                    android:padding="5dp"
                    android:textSize="18sp"
                    />

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_below="@+id/id1"
            android:id="@+id/id2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:background="@color/message2"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🌅 সূর্যদয়"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:padding="5dp"
                    android:textSize="25sp"
                    />

                <TextView
                    android:id="@+id/সূর্যদয়"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="৬ টা ৫৩ মি ০০ সে"
                    android:textColor="@color/white"
                    android:padding="5dp"
                    android:textSize="18sp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentRight="true"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="সূর্যাস্ত 🌅"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:padding="5dp"
                    android:textSize="25sp"
                    />
                <TextView
                    android:id="@+id/সূর্যাস্ত"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="৫ টা ২৯ মি ০০ সে"
                    android:textColor="@color/white"
                    android:padding="5dp"
                    android:textSize="18sp"
                    />

            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/linearLayout1"
        android:id="@+id/clockLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical"
        >

        <TextClock
            android:id="@+id/textClock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:format12Hour="hh:mm:ss"
            android:text="10:10:10 PM"
            android:textSize="19sp"
            android:padding="5dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:textStyle="bold" />

    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/clockLayout"
        android:id="@+id/DateLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sunday, January 1, 2023"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="19sp"
            android:textColor="@color/white"
            android:padding="5dp"
            android:textStyle="bold"

            />
    </LinearLayout>



</RelativeLayout>